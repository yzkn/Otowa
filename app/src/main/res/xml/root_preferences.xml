<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:summary="@string/locating_summary"
        app:title="@string/locating">

        <EditTextPreference
            android:defaultValue="@string/locating_interval_milliseconds_default"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_locating_interval_milliseconds"
            app:summary="@string/locating_interval_milliseconds_summary"
            app:title="@string/locating_interval_milliseconds"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/locating_error_default"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_locating_error"
            app:summary="@string/locating_error_summary"
            app:title="@string/locating_error"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:summary="@string/home_area_summary"
        app:title="@string/home_area">

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_home_area_radius"
            app:title="@string/home_area_radius"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_home_area_latitude"
            app:title="@string/home_area_latitude"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_home_area_longitude"
            app:title="@string/home_area_longitude"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:summary="@string/weather_summary"
        app:title="@string/weather">

        <EditTextPreference
            android:defaultValue="@string/weather_forecast_base_url_default"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_weather_forecast_base_url"
            app:title="@string/weather_forecast_base_url"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:summary="@string/app_summary"
        app:title="@string/app">

        <SwitchPreferenceCompat
            app:key="pref_is_debug_mode"
            app:title="@string/is_debug_mode" />

        <SwitchPreferenceCompat
            app:key="pref_is_debug_mode_loop"
            app:title="@string/is_debug_mode_loop" />

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_current_latitude"
            app:title="@string/current_latitude"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_current_longitude"
            app:title="@string/current_longitude"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

